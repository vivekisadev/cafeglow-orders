      @media print {
        body * {
          visibility: hidden;
        }
        .print-bill,
        .print-bill * {
          visibility: visible;
        }
        .print-bill {
          position: absolute;
          left: 0;
          top: 0;
          color: #000;
          background: #fff;
        }
      }
    </style>
